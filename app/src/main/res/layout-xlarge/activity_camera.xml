<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/camera_activity_layout"
    tools:context=".CameraActivity" >

    <FrameLayout
        android:id="@+id/camera_preview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />
    
    <LinearLayout 
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:gravity="center"
        android:id="@+id/camera_activity_center"
        android:orientation="horizontal" />
    
    <LinearLayout
            android:id="@+id/results_holder_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/camera_result_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:tag="layout-large"
                android:textSize="65sp"
                android:textStyle="bold"
                android:padding="5dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:textAlignment="center" />

        <Button
            android:id="@+id/flash_button"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="10"
            android:drawableLeft="@mipmap/hhy_flash_on"
            android:text="@string/flash_on"
            android:textColor="@android:color/white"
            android:textSize="36sp"
            tools:ignore="RtlHardcoded" />

        </LinearLayout>

</RelativeLayout>