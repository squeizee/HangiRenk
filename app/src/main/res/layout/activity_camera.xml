<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/camera_activity_layout"
    tools:context=".CameraActivity" >

    <FrameLayout
        android:id="@+id/camera_preview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

    </FrameLayout>

    <LinearLayout
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:gravity="center"
        android:id="@+id/camera_activity_center"
        android:orientation="horizontal" />

    <LinearLayout
        android:id="@+id/results_holder_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/camera_result_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingTop="1dp"
            android:paddingRight="5dp"
            android:paddingBottom="1dp"
            android:tag="layout"
            android:textAlignment="center"
            android:textSize="45sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/flash_button"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="10"
            android:drawableLeft="@mipmap/hhy_flash_on"
            android:text="@string/flash_on"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            tools:ignore="RtlHardcoded" />

    </LinearLayout>

</RelativeLayout>